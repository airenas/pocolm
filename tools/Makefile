tools=clear.symbols fix.quotes drop.parentheses map.symbols to.lc fix.punct

#######################################################################
dist_dir=$(CURDIR)/bin
dist_tools_files=$(patsubst %, $(dist_dir)/%, $(tools))
#######################################################################
$(dist_dir): 
	mkdir -p $@
#######################################################################
$(dist_dir)/%: cmd/% | $(dist_dir)
	cd $^ && go build -o $@
#######################################################################
build: $(dist_tools_files)
#######################################################################
test:
	gotestsum
clean:
	rm -rf $(dist_dir)
#######################################################################
